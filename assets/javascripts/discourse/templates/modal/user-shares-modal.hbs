<div class="user-shares-modal">
  <h2 class="modal-title">Shares</h2>

  {{#if loading}}
    <p>Bezig met laden…</p>
  {{else}}
    <p><b>Saldo:</b> {{balance}}</p>

    {{#if canSend}}
      <div class="send-form">
        {{input type="number" value=sendAmount placeholder="Aantal"}}
        <button class="btn btn-primary" {{action "sendShares"}} disabled={{loading}}>
          Verstuur
        </button>
      </div>
    {{/if}}

    <h3>Transacties</h3>
    {{#if transactions.length}}
      <ul class="transactions">
        {{#each transactions as |t|}}
          <li>
            {{t.created_at}} — {{t.amount}}
            {{#if t.note}} — {{t.note}}{{/if}}
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>Geen transacties.</p>
    {{/if}}
  {{/if}}
</div>
