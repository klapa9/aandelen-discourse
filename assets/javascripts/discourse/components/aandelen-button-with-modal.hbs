<DButton
  @icon="chart-line"
  @action={{this.openModal}}
  class="btn-primary"
>
  <span class="desktop-only">Aandelen</span>
</DButton>

{{#if this.modalIsVisible}}
  <DModal @title="Aandelen versturen" @closeModal={{this.closeModal}}>
    <:body>
      <p>
        Je verstuurt aandelen naar <b>{{this.recipient.username}}</b>.
      </p>

      <p>Je huidige aantal aandelen: <b>{{this.balance}}</b></p>

      <label for="amount">Aantal aandelen:</label>
      <Input
        @type="number"
        @value={{this.amount}}
        min="1"
        max={{this.balance}}
        id="amount"
      />
    </:body>

    <:footer>
      <DButton
        @translatedLabel="Verstuur"
        @action={{this.sendShares}}
        class="btn-primary"
      />
      <DButton
        @translatedLabel="Annuleer"
        @action={{this.closeModal}}
      />
    </:footer>
  </DModal>
{{/if}}
