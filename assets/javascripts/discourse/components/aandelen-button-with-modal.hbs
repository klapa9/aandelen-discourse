{{!-- Desktop: icoon + label --}}
<DButton
  @icon="balance-scale"
  @translatedLabel="Aandelen"
  @action={{this.openModal}}
  class="btn-primary desktop-only"
/>

{{!-- Mobiel: alleen icoon --}}
<DButton
  @icon="balance-scale"
  @title="Aandelen"
  @action={{this.openModal}}
  class="btn-icon mobile-only"
/>

{{#if this.modalIsVisible}}
  <DModal @title="Aandelen" @closeModal={{this.closeModal}}>
    <:body>
      <p>Dit is de inhoud van de aandelen modal.</p>
    </:body>
    <:footer>
      <DButton @translatedLabel="Sluiten" @action={{this.closeModal}} />
    </:footer>
  </DModal>
{{/if}}
